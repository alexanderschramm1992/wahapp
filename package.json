{
  "name": "wahapp",
  "version": "0.0.1",
  "description": "Quick tag-based 40k library",
  "main": "elm.js",
  "scripts": {
    "test": "parcel src/index.html",
    "prestart": "rimraf ./dist",
    "start": "parcel build src/index.html --public-url ./ && copyfiles -V -f ./src/img/* ./dist/img",
    "poststart": "live-server ./dist"
  },
  "keywords": [
    "40k",
    "tags",
    "elm"
  ],
  "author": "Alexander Schramm",
  "license": "MIT",
  "dependencies": {
    "copyfiles": "^2.4.1",
    "cordova": "^11.0.0",
    "live-server": "^1.2.1",
    "parcel-bundler": "^1.12.5",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "elm-hot": "^1.1.6",
    "node-elm-compiler": "^5.0.6"
  }
}
